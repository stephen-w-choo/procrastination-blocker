{
  "name": "procrastination-blocker",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@chakra-ui/storybook-addon": "^5.1.0",
    "@chromatic-com/storybook": "^1.3.5",
    "@storybook/addon-essentials": "^8.0.10",
    "@storybook/addon-interactions": "^8.0.10",
    "@storybook/addon-links": "^8.0.10",
    "@storybook/addon-onboarding": "^8.0.10",
    "@storybook/blocks": "^8.0.10",
    "@storybook/react": "^8.0.10",
    "@storybook/react-vite": "^8.0.10",
    "@storybook/test": "^8.0.10",
    "bun-types": "latest",
    "storybook": "^8.0.10"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@types/chrome": "^0.0.260",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "framer-motion": "^11.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^3.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "ts-jest": "^29.1.2",
    "vite": "^5.2.11"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "test": "jest",
    "build": "bun run type-check && bun run build:background && bun run build:content && bun run build:move && bun run build:cleanup",
    "format": "prettier --write \"**/*.ts\" \"**/*.tsx\"",
    "storybook": "storybook dev -p 6006",
    "build:background": "vite build --config vite.config.background.js",
    "build:content": "vite build --config vite.config.content.js",
    "build:move": "mv build/background/* build && mv build/content/* build && mv build/src/entry-points/* build",
    "build:cleanup": "rm -rf build/background build/content build/src",
    "build-storybook": "storybook build"
  }
}
